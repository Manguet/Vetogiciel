{% extends 'admin/base.html.twig' %}

{% block morestylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('admin/css/datatables.bootstrap.css') }}"/>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.24/rr-1.2.7/datatables.min.css"/>
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <a href="{{ path('admin_joboffer_show', { 'id' : candidate.jobOffer.id }) }}">
            <button class="custom-button">
                <i class="fas fa-backspace"></i> Retour
            </button>
        </a>
        {% if not candidate.isResponseSend %}
            <a href="{{ path('admin_candidate_validate', { 'id' : candidate.id }) }}">
                <button class="custom-button">
                    <i class="fas fa-check"></i> Réponse faites
                </button>
            </a>
        {% endif %}
    </div>

    <ul class="tabs">
        <li class="tab-link current" data-tab="tab-1">Informations Générales</li>
        <li class="tab-link" data-tab="tab-2">Motivation</li>
        <li class="tab-link" data-tab="tab-3">CV</li>
    </ul>

    <div id="tab-1" class="tab-content current">
        <div class="d-flex justify-content-between">
            <div>
                <p class="text-show">
                    <span>Nom : </span> {{ candidate.lastName }}
                </p>
                <p class="text-show">
                    <span>Prénom : </span> {{ candidate.firstName }}
                </p>
                <p class="text-show">
                    <span>Email : </span> {{ candidate.email }}
                </p>
                <p class="text-show">
                    <span>A postulé le : </span> {{ candidate.dateCreation|date('d/m/Y H:i') }}
                </p>
            </div>
        </div>
    </div>

    <div id="tab-2" class="tab-content">
        <div class="d-flex justify-content-between">
            <div>
                <p class="text-show">
                    {{ candidate.presentation|raw }}
                </p>
            </div>
        </div>
    </div>

    <div id="tab-3" class="tab-content">
        <p class="text-show d-flex align-content-between justify-content-between">
            <embed src="/images/cv/{{ candidate.cv }}" width="800px" height="800px" />
        </p>
    </div>
{% endblock %}