{% extends 'admin/base.html.twig' %}

{% block morestylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('admin/css/datatables.bootstrap.css') }}"/>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.24/rr-1.2.7/datatables.min.css"/>
{% endblock %}

{% block body %}
    <div class="mt-5 d-flex justify-content-between">
        {% if is_granted('ADMIN_BOOKING_ADD') %}
            <a href="{{ path('admin_calendar_booking_new', { 'id': veterinary.id }) }}">
                <button class="custom-button mb-3">
                    <i class="far fa-calendar-plus"></i> Voir l'agenda
                </button>
            </a>
        {% endif %}

        <div class="dropdown">
            <button class="btn custom-button dropdown-toggle"
                    type="button"
                    id="dropdownMenuButton"
                    data-toggle="dropdown"
                    aria-haspopup="true"
                    aria-expanded="false"
            >
                Dr. {{ veterinary.firstname }} {{ veterinary.lastname }} <i class="fas fa-sort-down"></i>
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                {% for vet in veterinaries %}
                    {% if vet != veterinary %}
                        <a class="dropdown-item"
                           href="{{ path('admin_calendar_booking_index', { 'veterinary' : vet.id }) }}"
                        >
                            Dr. {{ vet.firstname }} {{ vet.lastname }}
                        </a>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>

    <div id="my-tab">

    </div>
{% endblock %}

{% block endjavascript %}
    <script src="{{ asset('bundles/datatables/js/datatables.js') }}"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.24/rr-1.2.7/datatables.min.js"></script>
    <script>
        $(function() {
            $('#my-tab').initDataTables({{ datatable_settings(table) }}, {
                searching: true,
                dom:'lTfgtpi',
                language: {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.21/i18n/French.json"
                },
                pageLength: 25,
                serverSide: true,
                url: "?veterinary={{ veterinary.id }}"

            }).then(function (dt) {

                /** Ajax delete */
                $('#my-tab tbody').on('click', '.deleteAjax', function (e) {
                    e.preventDefault();

                    let url = $(this).attr('href');
                    swal({
                        title      : 'ATTENTION',
                        text       : 'Voulez-vous vraiment supprimer ce rendez-vous ?',
                        icon       : 'warning',
                        buttons    : true,
                        dangerMode : true,
                    }).then((willDelete) => {
                        if (willDelete) {
                            $.ajax({
                                type      : 'POST',
                                url       : url,
                                data_type : 'json',
                                data      : {}
                            }).done(function (data) {
                                dt.ajax.reload();
                                swal(data.message, "", data.type);
                            })
                        }
                    })
                })
            })
        });
    </script>
{% endblock %}