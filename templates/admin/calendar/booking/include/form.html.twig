<div class="modal fade" id="event-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title main-color">Ajouter un Rendez-vous</h4>
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start(form) }}
                <div>
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title) }}
                </div>
                <div class="d-flex flex-column">
                    {{ form_label(form.client) }}
                    {{ form_widget(form.client) }}
                </div>
                <div class="d-flex flex-column">
                    {{ form_label(form.animal) }}
                    {{ form_widget(form.animal) }}
                </div>
                <div class="radio-toolbar">
                    {{ form_label(form.color) }}
                    {{ form_widget(form.color) }}
                </div>
                <div>
                    {{ form_label(form.beginAt) }}
                    {{ form_widget(form.beginAt) }}
                </div>
                <div>
                    {{ form_label(form.endAt) }}
                    {{ form_widget(form.endAt) }}
                </div>
                <div class="d-flex justify-content-center align-items-center m-5">
                    {{ form_widget(form.save) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>