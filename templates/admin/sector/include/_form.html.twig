<div>
    {{ form_start(form) }}

    <ul class="tabs">
        <li class="tab-link current" data-tab="tab-1">Informations Générales</li>
        <li class="tab-link" data-tab="tab-2">Informations Personelles</li>
    </ul>

    <div id="tab-1" class="tab-content current">
        <div>
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
        </div>

        <div>
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
        </div>

        <div>
            {{ form_label(form.icon) }}
            {{ form_widget(form.icon) }}
        </div>
    </div>

    <div id="tab-2" class="tab-content">
        <div>
            {{ form_label(form.veterinaries) }}
            {{ form_widget(form.veterinaries) }}
        </div>

        <div>
            {{ form_label(form.employees) }}
            {{ form_widget(form.employees) }}
        </div>
    </div>

    <div class="d-flex justify-content-center align-items-center mb-5">
        {{ form_widget(form.save) }}
    </div>

    {{ form_end(form) }}
</div>