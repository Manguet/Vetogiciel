{% extends 'admin/base.html.twig' %}

{% block morestylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('admin/css/datatables.bootstrap.css') }}"/>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.24/rr-1.2.7/datatables.min.css"/>
{% endblock %}

{% block body %}
    <div class="mt-5">
        {% if is_granted('ADMIN_ANIMAL_ADD') %}
            <a href="{{ path('admin_animal_new_alone') }}">
                <button class="custom-button mb-3">
                    <i class="fas fa-dog"></i> Ajouter un Animal
                </button>
            </a>
        {% endif %}
    </div>

    <div id="my-tab">

    </div>
{% endblock %}

{% block endjavascript %}
    <script src="{{ asset('bundles/datatables/js/datatables.js') }}"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.24/rr-1.2.7/datatables.min.js"></script>
    <script>
        $(function() {
            $('#my-tab').initDataTables({{ datatable_settings(table) }}, {
                searching: true,
                dom:'lTfgtpi',
                language: {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.21/i18n/French.json"
                },
                pageLength: 25,
                rowCallback: function( row, data, index ) {
                    if (data.isInsured === "AssurÃ©") {
                        $('td:eq(3)', row).css('background-color', '#58D68D');
                        $('td:eq(3)', row).css('color', '#FFF');
                    }
                    if (data.isAlive !== '') {
                        $('td', row).css('text-decoration', 'line-through');
                        $('td', row).css('opacity', '0.4');
                    }
                }
            }).then(function (dt) {

                /** Ajax delete */
                $('#my-tab tbody').on('click', '.deleteAjax', function (e) {
                    e.preventDefault();

                    let url = $(this).attr('href');
                    swal({
                        title      : 'ATTENTION',
                        text       : 'Voulez-vous vraiment supprimer cet animal ?',
                        icon       : 'warning',
                        buttons    : true,
                        dangerMode : true,
                    }).then((willDelete) => {
                        if (willDelete) {
                            $.ajax({
                                type      : 'POST',
                                url       : url,
                                data_type : 'json',
                                data      : {}
                            }).done(function (data) {
                                dt.ajax.reload();
                                swal(data.message, "", data.type);
                            })
                        }
                    })
                })
            })
        });
    </script>
{% endblock %}