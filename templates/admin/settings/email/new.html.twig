{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="mb-5">
        <a href="{{ path('email_index') }}">
            <button class="custom-button">
                <i class="fas fa-backspace"></i> Retour
            </button>
        </a>
    </div>
    {{ include('admin/settings/email/include/_form.html.twig') }}
{% endblock %}

{% block endjavascript %}
    <script>

        if ($('#email_isDestinatorCurrentUser').is(':checked')) {
            $('.add-destinator').css('display', 'none');
        } else {
            $('.add-destinator').css('display', 'block');
        }

        if ($('#email_isExpeditorCurrentUser').is(':checked')) {
            $('.add-expeditor').css('display', 'none');
        } else {
            $('.add-expeditor').css('display', 'block');
        }

        $('#email_isDestinatorCurrentUser').on('click', function () {
            if ($('#email_isDestinatorCurrentUser').is(':checked')) {
                $('.add-destinator').css('display', 'none');
            } else {
                $('.add-destinator').css('display', 'block');
            }
        })

        $('#email_isExpeditorCurrentUser').on('click', function () {
            if ($('#email_isExpeditorCurrentUser').is(':checked')) {
                $('.add-expeditor').css('display', 'none');
            } else {
                $('.add-expeditor').css('display', 'block');
            }
        })
    </script>
{% endblock %}
