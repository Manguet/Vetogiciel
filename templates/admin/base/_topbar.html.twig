<div class="top-bar d-flex justify-content-between align-items-center">
    <i class="fas fa-question-circle" title="Besoin d'aide ?"></i>

    <div class="d-flex justify-content-between align-items-center">
        <div class="mr-3">
            <i class="far fa-envelope"></i>
        </div>

        {% if app.user.photo is defined and app.user.photo is not null %}
            <img src="{{ vich_uploader_asset(app.user, 'photoFile')|imagine_filter('mini_thumb') }}"
                 alt="Dr.{{ app.user.lastName }}"
                 title="photo de.{{ app.user.lastName }}"
                 class="avatar"
            >
        {% else %}
            <i class="fas fa-user-md"></i>
        {% endif %}
        <div class="dropdown">
            <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                {{ app.user.firstName }} {{ app.user.lastName }}
            </button>

            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item d-flex justify-content-between align-items-center"
                   href="#"
                >
                    Profil <i class="fas fa-user"></i>
                </a>

                {% if is_granted('ADMIN_SETTINGS_ACCESS') %}
                    <a class="dropdown-item d-flex justify-content-between align-items-center"
                       href="{{ path('settings_index') }}"
                    >
                        Settings <i class="fas fa-cog"></i>
                    </a>
                {% endif %}

                <a class="dropdown-item d-flex justify-content-between align-items-center"
                   href="#"
                >
                    Mot de passe <i class="fas fa-key"></i>
                </a>
                <a class="dropdown-item d-flex justify-content-between align-items-center"
                   href="#"
                >
                    Deconnexion <i class="fas fa-power-off"></i>
                </a>
            </div>
        </div>
    </div>
</div>