<div class="mt-5 graph-zone">
    <div class="dashboard-titles">
        <h2><i class="fas fa-cash-register"></i> Chiffre d'affaire</h2>
    </div>
    <div class="d-flex justify-content-between">
        <div id="div_graph" class="graph"></div>

        <div class="d-flex flex-column best-sells">
            <h2 class="dashboard-titles graph d-flex justify-content-around align-items-center px-3"><i class="fas fa-trophy trophy"></i> Top Ventes <i class="fas fa-trophy trophy"></i></h2>
            <div class="d-flex flex-column">
                {% for client in clients %}
                    <div class="sell" style="{% if loop.first %}border-radius: 15px 15px 0px 0px{% endif %}; background-color: {% if loop.index is odd %}#CCD1D1{% else %}#AED6F1{% endif %}">
                        <div class="d-flex justify-content-between align-items-center seller">
                            <i class="fas fa-user-circle client" style="color: {% if loop.index is odd %}#FFF{% else %}#5499C7{% endif %} !important;"></i>
                            <div>
                                <div class="user-info">{{ client.firstName }} {{ client.lastName }} {{ random(1000, 2200) }} €</div>
                                <div class="text-right user-extra">Visite le 15/03/2021 à 13h</div>
                                <div class="text-right user-extra">Avec Dr. John Do</div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

    </div>
</div>