<div>
    <h3 class="main-color" id="comment-zone">Commenter cet article</h3>

    <div>
        {% for comment in comments %}
            <hr>
            <div>
                <p><span class="created-by">{{ comment.createdBy }}</span> <span class="undertitle"> à commenté le {{ comment.dateCreation|date('d/m/Y H:i') }}</span></p>
                <p class="pl-5">{{ comment.description }}</p>
            </div>
            <hr>
        {% endfor %}
        <div class="d-flex justify-content-center">
            {{ knp_pagination_render(comments) }}
        </div>

        {{ form_start(form, {'action': path('article_comment', {'id' : article.id }), 'method': 'POST'}) }}
        <div>
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
        </div>

        {% if app.user %}
            <div class="d-flex justify-content-center align-items-center mt-5 mb-5">
                {{ form_widget(form.save) }}
            </div>
        {% else %}
            <div class="d-flex alert-post justify-content-center align-items-center mt-5 mb-5">
                <i class="fas fa-exclamation-triangle"></i>  Vous devez être connecté pour poster  <i class="fas fa-exclamation-triangle"></i>
            </div>
        {% endif %}
        {{ form_end(form, {'render_rest': false}) }}
    </div>
</div>

