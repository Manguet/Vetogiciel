{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="index-admin index-margin-top">

        <div class="text-center form-login">
            <form method="post">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
                {% if error is defined and error %}
                    <div class="alert alert-danger">L'utilisateur n'a pas été trouvé ou bien l'adresse n'a pas été validée</div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Connexion Utilisateur</h1>

                <div class="text-left">
                    <label for="inputEmail">Email</label>
                </div>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>

                <div class="text-left mt-3">
                    <label for="inputPassword">Mot de Passe</label>
                </div>
                <input type="password" name="password" id="inputPassword" class="form-control" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <div class="mt-3">
                    <button class="custom-button" type="submit">
                        Se connecter
                    </button>
                </div>

            </form>

            <div class="mt-3">
                <small>Première connexion vétérinaire : <a href="{{ path('app_register') }}">Inscrivez-vous</a></small>
                <br>
                <small>Première connexion employé : <a href="{{ path('app_register') }}">Inscrivez-vous</a></small>
                <br>
                <small>Première connexion client : <a href="{{ path('app_register') }}">Inscrivez-vous</a></small>
            </div>
        </div>

    </div>
{% endblock %}
